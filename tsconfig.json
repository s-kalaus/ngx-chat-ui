{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngx-chat-ui-lib/*": [ "libs/ngx-chat-ui/src/lib/*" ],
      "@ngx-chat-ui/libs/ngx-chat-ui": ["libs/ngx-chat-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
